<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivShopGoodsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/colorPrimary"
            tools:layout_height="80dp"
            tools:layout_width="80dp" />

        <TextView
            android:id="@+id/tvShopGoodsName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/ivShopGoodsIcon"
            app:layout_constraintStart_toStartOf="@+id/ivShopGoodsIcon"
            app:layout_constraintTop_toBottomOf="@+id/ivShopGoodsIcon"
            tools:text="包邮 家有卡通人物" />

        <TextView
            android:id="@+id/tvShopGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dd2"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShopGoodsName"
            tools:text="￥18.6" />

        <TextView
            android:id="@+id/tvShopGoodsSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:textColor="@color/color_565"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tvShopGoodsName"
            app:layout_constraintTop_toBottomOf="@+id/tvShopGoodsName"
            tools:text="总售20件" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>